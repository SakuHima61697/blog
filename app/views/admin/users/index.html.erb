<div class="user-index">
    <h1 class="page-title">登録済みのユーザー一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>id</th>
          <th>名前</th>
          <th>登録日</th>
          <th>ユーザー削除</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
        	<td><%= user.name %></td>
        	<td><%= user.created_at %></td>
        	<td><%= link_to("ユーザー削除", "/admin/users/delete/#{user.id}", method: :destroy, class: "btn btn-danger") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>