<div class="login">
    <h1 class="page-title">管理者ログイン</h1>
    <br></br>
        <!--エラーメッセージ-->
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
    <br></br>
    <!--ログインフォーム-->
    <%= form_with model: @user, url:{controller: "admin/users", action: "login"}, local: true, method: :post do |form| %>
        <div class="login-form">
            <%= form.label :email, "管理者メールアドレス" %>
            <%= form.text_field :email %>
            <br></br>
            <%= form.label :password, "パスワード" %>
            <%= form.password_field :password %>
            <br></br>
            <%= form.submit :ログイン, class: "btn btn-primary" %>
        </div>
    <% end %>
    <br></br>
</div>