<div class="admin-blogs-index">
    <h1 class="page-title">登録済みのブログ一覧</h1>
    <br></br>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>ブログタイトル</th>
                <th>登録日</th>
                <th>ブログ削除</th>
            </tr>
        </thead>
        <tbody>
            <% @blogs.each do |blog| %>
                <tr>
                  <td><%= post.id %></td>
                	<td><%= post.name %></td>
                	<td><%= post.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
            	    <td><%= link_to("ブログ削除", "/admin/blogs/destroy/#{blog.id}", method: :destroy,  class: "btn btn-danger") %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <br></br>
<div class="admin-blogs-index">
    <!--ユーザー一覧ページ表示-->
    <%= paginate @blogs %>
    <br></br>
</div>