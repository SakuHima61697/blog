<div class="blog-create">
    <h1>ブログ作成</h1>
    
    <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
            <ul>
                <li><%= message %></li>
            </ul>
        </div>
    <% end %>
    
    <%= form_tag({controller: "blog", action: "new"}) do %>
        <div class="blog-form">
            <%= label_tag :タイトル%>
            <%= text_field_tag :title %>
            <br></br>
            <%= rich_text_area_tag :content %>
            <br></br>
            <%= submit_tag "ブログ作成" %>
        </div>
    <% end %>
</div>