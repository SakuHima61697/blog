<div class="blog-create">
    <h1 class="page-title">ブログ作成</h1>
        <br></br>
    <!--エラーメッセージ-->
    <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
            <ul>
                <li><%= message %></li>
            </ul>
        </div>
    <% end %>
    <!--ブログ作成フォーム-->
    <%= form_tag({controller: "blog", action: "create"}) do %>
            <%= label_tag :タイトル%>
            <%= text_field_tag :title %>
            <br></br>
            <%= label_tag :ジャンル%>
            <%= text_field_tag :genre %>
            <br></br>
            <p class="alert">※画像サイズによっては、画像が正しく表示されないことがあります。</p>
            <div class="blog-content-form">
                <%= rich_text_area_tag :content %>
            </div>
            <br></br>
            <%= submit_tag "ブログ作成", class: "btn btn-primary" %>
    <% end %>
        <br></br>
    <%= link_to("ブログ一覧に戻る", "/blogs", class: "btn btn-success") %>
</div>
<br></br>