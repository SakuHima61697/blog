<div class="blog-update">
    <h1 class="page-title">ブログ編集</h1>
    <br></br>
    <!--ブログ編集フォーム-->
    <%= form_tag({controller: "blog", action: "edit"}) do %>
        <%= label_tag :タイトル%>
        <%= text_field_tag :title, @post.title %>
        <br></br>
        <%= label_tag :ジャンル%>
        <%= text_field_tag :genre, @post&.genre %>
        <br></br>
        <div class="blog-form">
            <br></br>
            <%= rich_text_area_tag :content, @post.content %>
        </div>
            <br></br>
            <%= submit_tag "編集完了", class: "btn btn-primary" %>
    <% end %>
    <br></br>
    <%= link_to("ブログ詳細へ戻る", "/blogs/show/#{@post.id}", class: "btn btn-success") %>
    <br></br>
</div>