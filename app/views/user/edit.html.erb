<div class="user-edit">
    <h1 class="page-title">ユーザー情報編集</h1>
    <br></br>
    <!--ユーザー編集フォーム-->
    <%= form_tag({controller: "user", action: "update"}, {multipart: true}) do %>
    <div class="user-edit-form">
        <%= label_tag :ユーザー名%>
        <%= text_field_tag :name, @user.name %>
        <br></br>
        <%= label_tag :メールアドレス %>
        <%= email_field_tag :email, @user.email %>
        <br></br>
        <%= label_tag :url, "URL(Twitterなど)" %>
        <%= text_field_tag :url, @user.url %>
        <br></br>
        <%= label_tag :自己紹介 %>
        <%= text_area_tag :content, @user.content %>
        <br></br>
        <%= label_tag :パスワード %>
        <%= password_field_tag :password %>
        <br></br>
        <%= label_tag :パスワード確認用 %>
        <%= password_field_tag :password_confirmation %>
        <br></br>
        <%= label_tag :プロフィール画像 %>
        <div class="edit-profile-img">
            <%= file_field_tag :image %>
        </div>
        <br></br>
        <%= submit_tag "更新", class: "btn btn-primary" %>
    <% end %>
    </div>
        <br></br>
        <div class="user-edit-link">
            <%= link_to("ユーザー詳細画面へ戻る", "/blogs/user/#{@user.id}", class: "btn btn-success") %>
        </div>
</div>
<br></br>