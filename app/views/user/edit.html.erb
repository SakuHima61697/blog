<h1>ユーザー情報編集</h1>
<%= form_tag({controller: "user", action: "update"}, {multipart: true}) do %>
    <div class="user-edit-form">
        <%= label_tag :ユーザー名%>
        <%= text_field_tag :name, @user.name %>
        <%= label_tag :メールアドレス %>
        <%= email_field_tag :email, @user.email %>
        <%= label_tag :パスワード %>
        <%= password_field_tag :password, params[:password] %>
        <%= label_tag :パスワード確認用 %>
        <%= password_field_tag :password_confirmation, params[:password_confirmation] %>
        <%= label_tag :プロフィール画像 %>
        <%= file_field_tag :image %>
        <br></br>
        <%= submit_tag "更新" %>
    </div>
<% end %>
<div class="user-edit-link">
    <%= link_to("戻る", "/blog/user/#{@user.id}") %>
</div>