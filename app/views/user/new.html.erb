<div class="signup">
    <h1 class="page-title">ユーザー登録</h1>
    <br></br>
    <!--エラーメッセージ-->
    <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
            <li><%= message %></li>
        </div>
    <% end %>
    <!--ユーザー登録フォーム-->
    <%= form_with model: @user, url: {controller: "user", action: "create"}, multipart: true, local: true, method: :post do |form| %>
        <div class="signup-form">
            <%= form.label :name %>
            <%= form.text_field :name %>
            <br></br>
            <%= form.label :email %>
            <%= form.email_field :email %>
            <br></br>
            <%= form.label :url, "URL(Twitterなど)" %>
            <%= form.text_field :url %>
            <br></br>
            <%= form.label :content, "自己紹介" %>
            <%= form.text_area :content %>
            <br></br>
            <%= form.label :password, "パスワード" %>
            <%= form.password_field :password %>
            <br></br>
            <%= form.label :password_confirmation, "パスワード(確認用)" %>
            <%= form.password_field :password_confirmation %>
            <br></br>
            <%= form.label :image, "プロフィール画像" %>
            <div class = "signup-profile-img" >
                <%= form.file_field :image, class: "signup-form-tag" %>
            </div>
            <br></br>
            <%= form.submit "登録", class: "btn btn-primary" %>
        </div>
    <% end %>
    <br></br>
</div>